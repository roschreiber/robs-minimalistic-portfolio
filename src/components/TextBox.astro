---
interface Props {
    title: string;
    class?: string;
}

const { title, class: className } = Astro.props;
---

<div class={`rounded-lg border border-white/20 p-6 ${className || ''}`}>
    <h2 class="text-2xl font-bold text-white mb-4">{title}</h2>
    <div class="text-white/90 space-y-2">
        <slot />
    </div>
</div>